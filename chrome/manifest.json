{
  "name": "Viola: Facebook tts",
  "version": "1.3",
  "description": "Have your facebook newsfeed read out loud",
  "app": {
    "launch": {
      "local_path": "main.html"
    }
  },  
  "icons": {
    "16": "img/violamini.png",
    "32": "img/violalogo_32.png",
    "128": "img/violalogo_128.png"
  },   	
  "permissions": [
    "tabs",
    "*.facebook.com/*",
    "*.fbcdn.net/*",
    "unlimitedStorage",
    "tts",
    "background"
  ]
}
